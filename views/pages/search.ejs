<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title%></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <hr />
    <ul>
      <% searchResult.forEach((result) => { %>
      <li>
        <p>
          ID: <%= result.id%>, Name <%= result.firstName%> <%= result.lastName%>
        </p>
        <p>Email: <%= result.email %></p>
        <p>Age: <%= result.age%></p>
        <p>Bio: <%= result.bio%></p>
        <a href="/<%= result.id%>/update">Update Information</a>
        <form
          action="/<%= user.id%>/delete"
          method="POST"
          style="display: inline"
        >
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this user?')"
          >
            Delete
          </button>
        </form>
      </li>
      <%})%>
    </ul>
  </body>
</html>
